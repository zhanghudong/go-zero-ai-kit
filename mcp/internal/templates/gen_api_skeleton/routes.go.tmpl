package handler

import (
	"net/http"

	"{{.ModulePath}}/internal/handler/{{.PackageName}}"
	"{{.ModulePath}}/internal/svc"

	"github.com/zeromicro/go-zero/rest"
)

func RegisterHandlers(server *rest.Server, serverCtx *svc.ServiceContext) {
	server.AddRoutes(
		[]rest.Route{
			{
				Method:  http.MethodGet,
				Path:    "/{{.ApiName}}/:id",
				Handler: {{.PackageName}}.Get{{.ApiName}}Handler(serverCtx),
			},
			{
				Method:  http.MethodPost,
				Path:    "/{{.ApiName}}",
				Handler: {{.PackageName}}.Create{{.ApiName}}Handler(serverCtx),
			},
		},
		rest.WithPrefix("{{.BasePath}}"),
	)
}
